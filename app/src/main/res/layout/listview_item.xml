<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="18dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <TextView
            android:id="@+id/listName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textColor="@color/black" />

        <include
            android:id="@+id/weather1"
            layout="@layout/weather_column" />

        <include
            android:id="@+id/weather2"
            layout="@layout/weather_column" />

        <include
            android:id="@+id/weather3"
            layout="@layout/weather_column" />

        <include
            android:id="@+id/weather4"
            layout="@layout/weather_column" />

        <include
            android:id="@+id/weather5"
            layout="@layout/weather_column" />

        <include
            android:id="@+id/weather6"
            layout="@layout/weather_column" />

        <include
            android:id="@+id/weather7"
            layout="@layout/weather_column" />

        <include
            android:id="@+id/weather8"
            layout="@layout/weather_column" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/edit_area"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="4dp"
            android:layout_weight="3"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_edit"
            android:visibility="gone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/delete_area"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="4dp"
            android:layout_weight="3"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginVertical="4dp"
            android:layout_weight="8"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>